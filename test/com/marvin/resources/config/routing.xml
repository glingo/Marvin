<?xml version="1.0" encoding="UTF-8"?>

<routing>
    
    <route name="test" path="/test">
        <default key="_controller">com.marvin.component.controller.TestController::test</default>
    </route>
    
    <route name="test_hello" path="/hello/{name}">
        <default key="_controller">com.marvin.component.controller.TestController::hello</default>
        <default key="name">World</default>
        <requirement key="name">\\w+</requirement>
    </route>
    
</routing>